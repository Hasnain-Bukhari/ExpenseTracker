<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ExpenseTracker.Dtos" namespace="ExpenseTracker.Dtos.Models">
  
  <class name="Goal" table="goals" lazy="true">
    <id name="Id" column="id" type="Guid">
      <generator class="guid.comb" />
    </id>
    
    <property name="UserId" column="user_id" type="Guid" not-null="true" />
    <property name="Name" column="name" type="String" length="255" not-null="true" />
    <property name="Description" column="description" type="String" />
    <property name="TargetAmount" column="target_amount" type="Decimal" precision="18" scale="2" not-null="true" />
    <property name="CurrentAmount" column="current_amount" type="Decimal" precision="18" scale="2" not-null="true" />
    <property name="CategoryId" column="category_id" type="Guid" not-null="true" />
    <property name="StartDate" column="start_date" type="DateTime" not-null="true" />
    <property name="EndDate" column="end_date" type="DateTime" />
    <property name="Tag" column="tag" type="String" length="100" />
    
    <!-- Enum mappings -->
    <property name="GoalStatusString" column="status" type="String" length="50" not-null="true" />
    <property name="GoalPriorityString" column="priority" type="String" length="50" not-null="true" />
    
    <property name="CreatedAt" column="created_at" type="DateTime" not-null="true" />
    <property name="UpdatedAt" column="updated_at" type="DateTime" not-null="true" />
    
    <!-- Navigation properties -->
    <many-to-one name="Category" column="category_id" class="Category" insert="false" update="false" lazy="proxy" />
    
  </class>
  
</hibernate-mapping>
